<main class="container mx-auto p-4 flex justify-center flex-col">
  <div class="text-center">
    <h1 class="text-2xl">
      Welcome to Covid19 Supply Chain Management
    </h1>
  </div>
  <div class="my-2 text-center">
    <% if user_signed_in? %>
      <strong>Signed in as <%= current_user.name %></strong>
    <% else %>
    <%= link_to "Login with Twitter", user_twitter_omniauth_authorize_path, class: "px-4 py-2 bg-blue-500 text-white rounded shadow"%>
    <% end %>
  </div>
</main>
